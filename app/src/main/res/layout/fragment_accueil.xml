<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_color"
             tools:context="com.example.anthony.gestionstock.controller.FragmentAccueil">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:id="@+id/layoutAccueilNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/acceuil_libelle"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="QTE"
                            android:layout_width="0dp"/>

                        <TextView
                            style="@style/acceuil_libelle"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="LIBELLE"
                            android:layout_width="0dp"/>

                        <TextView
                            style="@style/acceuil_libelle"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="PRIX U"
                            android:layout_width="0dp"/>

                        <TextView
                            style="@style/acceuil_libelle"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="MONTANT"
                            android:layout_width="0dp"/>

                        <TextView
                            style="@style/acceuil_libelle"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_2"
                        android:background="@color/selected_cellule_bg"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_accueilNote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/cellule_note_accueil">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/accueil_bloc_button_note_height"
                android:padding="@dimen/margin_5"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginTop="@dimen/margin_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_deleteNote"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/accueil_bt_effacer"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_printNote"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="NOTE"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_offClient"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="OFF CLIENT"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_5"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10">

            <LinearLayout
                android:id="@+id/layoutAccueilCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cat6"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/standard_height"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutAccueilProduit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin_5"
                app:cardBackgroundColor="@android:color/white"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_accueilProduit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginTop="@dimen/margin_10">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="2">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 1"
                        android:textAlignment="center"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 2"
                        android:textAlignment="center"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 3"
                        android:textAlignment="center"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 4"
                        android:textAlignment="center"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori5"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 5"
                        android:textAlignment="center"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_prod_favori6"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/standard_height"
                        android:text="PRODUIT 6"
                        android:textAlignment="center"/>

                </GridLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>