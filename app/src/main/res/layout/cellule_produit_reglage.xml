<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:id="@+id/root_produit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/txt_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#c65727"
            android:text="PRODUIT"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_tarif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#c72727"
            android:text="TARIF"/>

        <TextView
            android:id="@+id/txt_lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#c72727"
            android:text="LOT"/>

        <Button
            android:id="@+id/btn_modifiy_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODIFIER"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera"
            android:textAlignment="center"
            android:visibility="invisible"/>
    </LinearLayout>
</android.support.v7.widget.CardView>