<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:id="@+id/root_produit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/txt_produit"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Produit"
            android:textAllCaps="false"
            android:textColor="@color/blue_grey"
            android:textSize="@dimen/font_12"/>

        <TextView
            android:id="@+id/txt_tarif"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tarif"
            android:textSize="@dimen/font_12"/>

        <TextView
            android:id="@+id/txt_lot"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lot"
            android:textSize="@dimen/font_12"/>

        <Button
            android:id="@+id/btn_modifiy_prod"
            style="@style/button_reglage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier"/>

        <ImageView
            android:id="@+id/img_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/ic_delete_forever_black_48dp"
            android:textAlignment="center"
            android:padding="@dimen/margin_2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>