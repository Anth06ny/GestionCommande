<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/margin_20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_categorie_name_libelle"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/nomCategorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="@dimen/font_14"
        android:hint="@string/dialog_categorie_name_hint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_categorie_color_libelle"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/margin_20"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnChoisirCouleur"
        android:layout_width="@dimen/standard_height"
        android:layout_height="@dimen/standard_height"
        />

</LinearLayout>