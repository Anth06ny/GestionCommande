<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_color"
             android:orientation="vertical"
             android:padding="@dimen/margin_20">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height">

        <TextView
            style="@style/dialog_text_libelle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/planning_param_start_day"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dpp_np_debut"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_40"
            android:layout_centerInParent="true"
            android:background="@color/selected_cellule_bg"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="@dimen/margin_40"
            app:np_max="23"
            app:np_min="0"
            app:np_orientation="horizontal"
            app:np_textColor="@color/colorAccent"
            app:np_textSize="@dimen/font_14"
            app:np_width="@dimen/margin_80"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="h"
            android:textSize="@dimen/font_12"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dpp_np_debut_min"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_40"
            android:layout_centerInParent="true"
            android:background="@color/selected_cellule_bg"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="@dimen/margin_40"
            app:np_max="45"
            app:np_min="0"
            app:np_orientation="horizontal"
            app:np_textColor="@color/colorAccent"
            app:np_textSize="@dimen/font_14"
            app:np_width="@dimen/margin_80"
            />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            style="@style/dialog_text_libelle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/planning_param_end_day"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dpp_np_fin"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_40"
            android:layout_centerInParent="true"
            android:background="@color/selected_cellule_bg"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="@dimen/margin_40"
            app:np_max="23"
            app:np_min="1"
            app:np_orientation="horizontal"
            app:np_textColor="@color/colorAccent"
            app:np_textSize="@dimen/font_14"
            app:np_width="@dimen/margin_80"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="h"
            android:textSize="@dimen/font_12"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/dpp_np_fin_min"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_40"
            android:layout_centerInParent="true"
            android:background="@color/selected_cellule_bg"
            app:np_dividerColor="@color/colorPrimary"
            app:np_height="@dimen/margin_40"
            app:np_max="45"
            app:np_min="0"
            app:np_orientation="horizontal"
            app:np_textColor="@color/colorAccent"
            app:np_textSize="@dimen/font_14"
            app:np_width="@dimen/margin_80"
            />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/margin_10">


        <TextView
            style="@style/dialog_text_libelle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Plage 1 : "/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_2"

            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/margin_5">

            <EditText
                android:id="@+id/dpp_et_p1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:minWidth="@dimen/margin_50"
                android:text="Matin"
                />

        </android.support.v7.widget.CardView>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"

        android:layout_height="@dimen/standard_height"
        >

        <android.support.v7.widget.AppCompatSeekBar
            android:layout_width="@dimen/margin_80"
            android:layout_span="2"/>

    </TableRow>
</TableLayout>