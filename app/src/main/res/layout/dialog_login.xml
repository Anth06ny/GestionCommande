<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/margin_25"
              android:paddingRight="@dimen/margin_25"
              android:paddingTop="@dimen/margin_25"
              android:gravity="center">

    <ImageView
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:src="@drawable/lock"/>

    <TextView
        android:id="@+id/promptview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20.0dp"
        android:text="Enter your passcode"
        android:textSize="@dimen/font_18"/>

    <com.example.anthony.gestionstock.vue.login_dialog.PassCodeView
        android:id="@+id/pass_code_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:digit_size="@dimen/font_30"
        app:digits="4"
        app:empty_drawable="@drawable/empty_dot"
        app:filled_drawable="@drawable/filled_dot"
        app:key_text_size="@dimen/font_30"
        />

</LinearLayout>