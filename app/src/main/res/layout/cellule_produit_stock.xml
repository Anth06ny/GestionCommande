<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/libelle_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="BABY JACK"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/quantite_consomme_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="1000"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/lot_consomme_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="10"
        android:textAlignment="center"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/min_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="MIN"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/img_remove_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"/>

        <TextView
            android:id="@+id/lot_recommande_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="10"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/img_add_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_circle_outline_black_24dp"/>

        <TextView
            android:id="@+id/max_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="MAX"
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>