<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/bg_color"
              android:orientation="vertical"
              android:padding="@dimen/margin_20">

    <TextView
        style="@style/dialog_text_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom :"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_5"
        android:layout_margin="@dimen/margin_2"
        app:cardBackgroundColor="@android:color/white"
        >

        <EditText
            android:id="@+id/editNomProduit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </android.support.v7.widget.CardView>

    <TextView
        style="@style/dialog_text_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:text="CatÃ©gorie :"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_5"
        android:layout_margin="@dimen/margin_2"
        app:cardBackgroundColor="@android:color/white"
        >

        <Spinner
            android:id="@+id/editCategorieProduit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/standard_height"/>
    </android.support.v7.widget.CardView>

    <TextView
        style="@style/dialog_text_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:text="Prix :"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/margin_5"
        >

        <EditText
            android:id="@+id/editPrixProduit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />
    </android.support.v7.widget.CardView>

    <TextView
        style="@style/dialog_text_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:text="Lot :"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardBackgroundColor="@android:color/white"
        >

        <EditText
            android:id="@+id/editLotProduit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_height"
        android:layout_marginTop="@dimen/margin_15"

        android:orientation="horizontal"
        >

        <TextView
            style="@style/dialog_text_libelle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Favori :"/>

        <CheckBox
            android:id="@+id/check_favori"
            android:layout_width="@dimen/standard_height"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            />
    </LinearLayout>


</LinearLayout>